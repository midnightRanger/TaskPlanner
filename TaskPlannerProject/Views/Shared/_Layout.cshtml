<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - TaskPlannerProject</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/TaskPlannerProject.styles.css" asp-append-version="true"/>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">
</head>
<body class="bg-light">

<div class="row flex-nowrap">
    <div class="col-auto col-md-3 col-xl-2 px-sm-2 px-0 bg-dark">
        <div class="d-flex flex-column align-items-center align-items-sm-start px-3 pt-2 text-white min-vh-100">
            <a href="/" class="d-flex align-items-center pb-3 mb-md-0 me-md-auto text-white text-decoration-none">
                <span class="fs-5 d-none d-sm-inline">Menu</span>
            </a>
            <ul class="nav nav-pills flex-column mb-sm-auto mb-0 align-items-center align-items-sm-start" id="menu">
                <li class="nav-item">
                    <a asp-action="Index" asp-controller="Home" class="nav-link align-middle px-0">
                        <i class="fs-4 bi-house"></i> <span class="ms-1 d-none d-sm-inline">Home</span>
                    </a>
                </li>
                <li>
                    <a asp-action="Index" asp-controller="Home" class="nav-link align-middle px-0">
                        <i class="fs-4 bi bi-check2"></i> <span class="ms-1 d-none d-sm-inline">Tasks</span>
                    </a>
                </li>

                <li>
                    <a asp-action="PlanIndex" asp-controller="Plan" class="nav-link px-0 align-middle">
                        <i class="fs-4 bi bi-calendar2-heart-fill"></i> <span class="ms-1 d-none d-sm-inline">Plans</span>
                    </a>
                </li>
                <li>
                  <a asp-action="Calendar" asp-controller="Calendar" class="nav-link px-0 align-middle">
                                          <i class="fs-4 bi bi-calendar2-date"></i> <span class="ms-1 d-none d-sm-inline">Calendar</span>
                      </a>
                </li>
          
            </ul>
            <hr>
            <div class="dropdown pb-4">
                <a href="#" class="d-flex align-items-center text-white text-decoration-none dropdown-toggle" id="dropdownUser1" data-bs-toggle="dropdown" aria-expanded="false">
                    <img src="https://www.pinclipart.com/picdir/big/157-1578186_user-profile-default-image-png-clipart.png" alt="hugenerd" width="30" height="30" class="rounded-circle">
                    <span class="d-none d-sm-inline mx-1">@User.Identity.Name</span>
                </a>
                <ul class="dropdown-menu dropdown-menu-dark text-small shadow">
               
                    <li>
                        <a class="dropdown-item" asp-action="Logout" asp-controller="Home">Sign out</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>

    <div class="container" style="flex-shrink: 1">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
</div>
<footer class="border-top footer text-muted bg-dark">
    <div class="container">
        &copy; 2023 - TaskPlanner - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
    </div>
</footer>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>