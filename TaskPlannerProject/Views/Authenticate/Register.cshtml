@model TaskPlannerProject.Models.ViewModels.RegisterViewModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
  <title>title</title>
  <link rel="canonical" href="https://getbootstrap.com/docs/4.0/examples/sign-in/">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
  <link href="~/css/signin.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">

</head>

<body class="text-center bg-dark">
<div class="alert alert-success margin-md" asp-validation-summary="ModelOnly"> </div>    
<div class="form-signin">
  <form asp-action="Register" asp-controller="Authenticate" method="post">
     <i style="font-size: 80px" class="bi bi-check-all text-light" ></i>
    <h1 class="h3 mb-3 fw-normal text-light">Please Register</h1>

    <div class="form-floating">
      <input type="email" asp-for="Email" class="form-control" id="floatingEmail" placeholder="name@example.com">
      <label for="floatingEmail">Email address</label>
    </div>
    
    <div class="form-floating">
          <input type="text" asp-for="Login" class="form-control" id="floatingInput" placeholder="Vanya212A">
          <label for="floatingInput">Login</label>
      </div>
    
    <div class="form-floating">
      <input type="password" asp-for="Password" class="form-control" id="floatingPassword" placeholder="Password">
      <label for="floatingPassword">Password</label>
    </div>
    
    <div class="form-floating">
          <input type="password" asp-for="PasswordConfirm" class="form-control" id="floatingConfirmPassword" placeholder="Password">
          <label for="floatingConfirmPassword">Confirm password</label>
      </div>

    <input style="width: 100%; margin-bottom: 10px;" class="btn btn-lg btn-light btn-block" type="submit" value="Register"/>

    <a style="width: 100%;" asp-action="Login" asp-controller="Authenticate" method="get" class="btn btn-lg btn-light btn-block" type="submit">Back</a>

    <p class="mt-5 mb-3 text-muted">Â© 2023</p>
  </form>
</div>

</body>


</html>